{
  "name": "AutoSorter",
  "author": "Pete",
  "description": "Adds the ability to upgrade all storage types to auto-sorters. Auto-sorters are able to transfer items from other storages on your raft automatically.",
  "version": "1.2.1",
  "license": "MIT",
  "icon": "icon.png",
  "banner": "banner.jpg",
  "gameVersion": "1.08",
  "updateUrl": "https://www.raftmodding.com/api/v1/mods/auto-sorter/version.txt",
  "isModPermanent": true,
  "excludedFiles": [],
  "requiredByAllPlayers": true,
  "modSettings": [
    {
      "type": "checkbox",
      "name": "ChangeStorageColorOnUpgrade",
      "text": "change storage color on upgrade",
      "default": true
    },
    {
      "type": "slider",
      "name": "MaxSearchResultItems",
      "text": "max. search results",
      "default": 25,
      "range": {
        "type": "number",
        "min": 5,
        "max": 100,
        "decimals": 0
      }
    },
    {
      "type": "slider",
      "name": "ReturnItemsOnDowngradeMultiplier",
      "text": "downgrade items returned",
      "default": 0.5,
      "range": {
        "type": "percent",
        "min": 0,
        "max": 1,
        "decimals": 0
      }
    },
    {
      "type": "slider",
      "name": "CheckIntervalSeconds",
      "text": "storage check interval (seconds)",
      "default": 2,
      "range": {
        "type": "number",
        "min": 1,
        "max": 10,
        "decimals": 0
      }
    },
    {
      "type": "checkbox",
      "name": "Debug",
      "default": false
    }
  ]
}